<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Events - Revelation 2k25</title>
    <link rel="stylesheet" href="/css/admin.css">
</head>
<body>
    <div class="admin-container">
        <div class="page-header">
            <h2>All Events</h2>
            <a href="/admin/event/new" class="btn">Add New Event</a>
        </div>

        <div class="events-grid">
            <% if (events && events.length > 0) { %>
                <% events.forEach(event => { %>
                    <div class="event-card">
                        <img src="<%= event.posterImage.url %>" alt="<%= event.name %>" class="event-poster">
                        <div class="event-details">
                            <div class="event-header">
                                <h3><%= event.name %></h3>
                                <span class="event-type-badge <%= event.type.toLowerCase() %>"><%= event.type %></span>
                            </div>
                            
                            <div class="event-info-grid">
                                <div class="event-info-item">
                                    <svg class="icon" viewBox="0 0 24 24"><path fill="currentColor" d="M19 4h-1V2h-2v2H8V2H6v2H5c-1.11 0-1.99.9-1.99 2L3 20a2 2 0 0 0 2 2h14c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 16H5V10h14v10zM5 8V6h14v2H5z"/></svg>
                                    <span><%= new Date(event.startTime).toLocaleDateString('en-IN', { day: 'numeric', month: 'short' }) %></span>
                                </div>
                                <div class="event-info-item venue">
                                    <svg class="icon" viewBox="0 0 24 24"><path fill="currentColor" d="M12 2C8.13 2 5 5.13 5 9c0 5.25 7 13 7 13s7-7.75 7-13c0-3.87-3.13-7-7-7zM7 9c0-2.76 2.24-5 5-5s5 2.24 5 5c0 2.88-2.88 7.19-5 9.88C9.92 16.21 7 11.85 7 9z"/><circle cx="12" cy="9" r="2.5"/></svg>
                                    <span><%= event.venue %></span>
                                </div>
                                <div class="event-info-item fee">
                                    <svg class="icon" viewBox="0 0 24 24"><path fill="currentColor" d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 18c-4.41 0-8-3.59-8-8s3.59-8 8-8 8 3.59 8 8-3.59 8-8 8zm.31-8.86c-1.77-.45-2.34-.94-2.34-1.67 0-.84.79-1.43 2.1-1.43 1.38 0 1.9.66 1.94 1.64h1.71c-.05-1.34-.87-2.57-2.49-2.97V5H10.9v1.69c-1.51.32-2.72 1.3-2.72 2.81 0 1.79 1.49 2.69 3.66 3.21 1.95.46 2.34 1.15 2.34 1.87 0 .53-.39 1.39-2.1 1.39-1.6 0-2.23-.72-2.32-1.64H8.04c.1 1.7 1.36 2.66 2.86 2.97V19h2.34v-1.67c1.52-.29 2.72-1.16 2.73-2.77-.01-2.2-1.9-2.96-3.66-3.42z"/></svg>
                                    <span class="amount">â‚¹<%= event.registrationAmount %></span>
                                </div>
                            </div>

                            <div class="event-actions">
                                <a href="/admin/event/<%= event._id %>" class="btn btn-small">View Details</a>
                                <a href="/admin/event/edit/<%= event._id %>" class="btn btn-small btn-secondary">Edit</a>
                            </div>
                        </div>
                    </div>
                <% }); %>
            <% } else { %>
                <div class="no-events">
                    <p>No events found</p>
                </div>
            <% } %>
        </div>
    </div>
</body>
</html>
